@model IEnumerable<Domain.Category>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsPublic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SupportsAuthors)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SupportsVideos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SupportsPlaylists)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsAssignable)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParentCategory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Platform)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Creator)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsPublic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SupportsAuthors)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SupportsVideos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SupportsPlaylists)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsAssignable)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParentCategoryId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Platform)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatorId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
