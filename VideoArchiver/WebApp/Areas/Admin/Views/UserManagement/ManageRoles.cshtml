@model WebApp.Areas.Admin.ViewModels.ManageRolesViewModel

@{
    ViewBag.Title = "title";
}

<h2>Manage roles for @Model.User.UserName</h2>
<a asp-action="Index">Return to users</a>

<div class="container">
    <div class="row">
        <div class="col-6">
            @foreach (var role in Model.User.Roles)
            {
                <div>
                    @role.Name
                    <form asp-action="RemoveRole">
                        @Html.Hidden("userId", Model.User.Id)
                        @Html.Hidden("roleName", role.Name)
                        <input type="submit" class="btn btn-danger" value="Remove"/>
                    </form>
                </div>
                <br/>
            }
        </div>
        <div class="col-6">
            @foreach (var role in Model.OtherRoles)
            {
                <div>
                    @role
                    <form asp-action="AddRole">
                        @Html.Hidden("userId", Model.User.Id)
                        @Html.Hidden("roleName", role)
                        <input type="submit" class="btn btn-success" value="Add"/>
                    </form>
                </div>
                <br/>
            }
        </div>
    </div>
</div>