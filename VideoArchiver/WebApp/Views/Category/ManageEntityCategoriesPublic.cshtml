@using Base.WebHelpers
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model WebApp.ViewModels.CategoryManageEntityCategoriesViewModel

@{
    ViewBag.Title = string.Format(App.Resources.WebApp.Views.Category.ManageEntityCategories.PageTitlePublic, Model.EntityType);
}

<h2>@string.Format(App.Resources.WebApp.Views.Category.ManageEntityCategories.PageTitlePersonal, Model.EntityType)</h2>

<a class="btn btn-outline-primary" href="@Model.ReturnUrl">@App.Resources.WebApp.Views.Category.ManageEntityCategories.Return</a>
<a class="btn btn-outline-primary" asp-action="Create" asp-route-returnUrl="@Context.GetFullPath()">@App.Resources.WebApp.Views.Category.ManageEntityCategories.CreateNew</a>
<a class="btn btn-outline-primary" asp-action="ManageEntityCategories" asp-route-returnUrl="@Model.ReturnUrl" asp-route-id="@Model.Id" asp-route-entityType="@Model.EntityType">
    @App.Resources.WebApp.Views.Category.ManageEntityCategories.ManagePersonalCategories
</a>

<div>
    <form method="post" asp-action="ManageEntityCategoriesPublic">
        <partial name="_ManageEntityCategoriesPartial" model="Model"/>
    </form>
</div>