@model ICollection<App.BLL.DTO.Entities.BasicVideoWithAuthor>

<div>
    <table class="table">
        <thead>
        <tr>
            <th>Video</th>
            <th>Author</th>
            <th>Thumbnail</th>
            <th>Duration</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var video in Model)
        {
            <tr>
                <td>
                    <a asp-action="Watch" asp-route-id="@video.Id">@video.Title</a>
                </td>
                <td>
                    <partial name="_AuthorSummaryPartial" model="@video.Author"/>
                </td>
                <td>
                    @if (video.Thumbnail?.LocalFilePath != null)
                    {
                        <div class="image-load-container" width="160" height="90" alt="Thumbnail" src="/@video.Thumbnail.LocalFilePath"></div>
                    }
                    else
                    {
                        <div>No thumbnails</div>
                    }
                </td>
                <td>
                    @video.Duration
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>